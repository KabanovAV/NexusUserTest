@using NexusUserTest.Common.DTOs

<NexusTableGrid @ref="NexusTable" TItem="AnswerDTO" Data="Items" SelectionMode="SelectMode"
                EditMode="EditMode" EmptyMessage="Нет ответов">
    <ToolTemplate>
        <NexusGroupButton>
            <NexusButton Title="Добавить" OnClick="Insert" CssClass="btn-primary" IconClass="bi bi-plus-lg" Disable="IsCrud" />
            <NexusButton Title="Изменить" OnClick="Edit" CssClass="btn-warning" IconClass="bi bi-pencil-fill" Disable="IsSelected" />
            <NexusButton Title="Удалить" OnClick="Delete" CssClass="btn-danger" IconClass="bi bi-trash3-fill" Disable="IsSelected" />
        </NexusGroupButton>
        <NexusGroupButton Visible="IsSaveCancel">
            <NexusButton Title="Сохранить" OnClick="Save" CssClass="btn-success" IconClass="bi bi-floppy-fill" />
            <NexusButton Title="Отменить" OnClick="Cancel" CssClass="btn-danger" IconClass="bi bi-x-lg" />
        </NexusGroupButton>
    </ToolTemplate>
    <Columns>
        <NexusTableGridColumn Title="#">
            <CellTemplate>
                @(Items.IndexOf(context) + 1)
            </CellTemplate>
        </NexusTableGridColumn>
        <NexusTableGridColumn Title="Название" Property="a => a.Title">
            <EditTemplate>
                <input class="form-control border border-black" type="text" @bind="context.Title" />
            </EditTemplate>
        </NexusTableGridColumn>
        <NexusTableGridColumn Title="Ответ" Property="a => a.IsCorrect">
            <EditTemplate>
                <input class="form-check-input border border-black" type="checkbox" @bind="context.IsCorrect" />
            </EditTemplate>
        </NexusTableGridColumn>
    </Columns>
</NexusTableGrid>

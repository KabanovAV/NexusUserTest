@if (Data != null && GroupSelects != null)
{
    <div class="card h-100">
        <div class="card-header">
            @(Data.Id == 0 ? "Добавить" : "Изменить") пользователя
        </div>
        <div class="card-body">
            <EditForm EditContext="editContext">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label class="form-label">@GetDisplayName(nameof(Data.FullName))</label>
                    <NexusTextBox @bind-Value="Data.FullName" NexusValueExpression="@(() => Data.FullName)" Placeholder="Введите ФИО" />
                    <ValidationMessage For="@(() => Data.FullName)" class="invalid-feedback" />
                </div>
                <div class="form-group pt-1">
                    <label class="form-label">@GetDisplayName(nameof(Data.Login))</label>
                    <NexusTextBox @bind-Value="Data.Login" NexusValueExpression="@(() => Data.Login)" Placeholder="Введите логин" />
                    <ValidationMessage For="@(() => Data.Login)" class="invalid-feedback" />
                </div>
                <div class="form-group pt-1">
                    <label class="form-label">@GetDisplayName(nameof(Data.Password))</label>
                    <NexusTextBox @bind-Value="Data.Password" NexusValueExpression="@(() => Data.Password)" Placeholder="Введите пароль" />
                    <ValidationMessage For="@(() => Data.Password)" class="invalid-feedback" />
                </div>
                <div class="form-group pt-1">
                    <label class="form-label">@GetDisplayName(nameof(Data.Organization))</label>
                    <NexusTextBox @bind-Value="Data.Organization" NexusValueExpression="@(() => Data.Organization)" Placeholder="Введите организацию" />
                </div>
                <div class="form-group pt-1">
                    <label class="form-label">@GetDisplayName(nameof(Data.Position))</label>
                    <NexusTextBox @bind-Value="Data.Position" NexusValueExpression="@(() => Data.Position)" Placeholder="Введите позицию" />
                </div>
                <div class="form-group pt-1">
                    <div class="card">
                        <div class="card-header">
                            Группы
                        </div>
                        <div class="card-body">
                            @foreach (var select in GroupSelects)
                            {
                                <div class="form-check form-check-inline" @onclick="() => CheckboxChange(select.Value)">
                                    <input class="form-check-input" type="checkbox" checked="@(Data.GroupUserItems!.Any(x => x.GroupId == select.Value) ? true : false)">
                                    <label class="form-check-label">
                                        @select.Text
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end gap-1">
                <button class="btn btn-light border" @onclick="Cancel">Отмена</button>
                <button class="btn btn-light border" @onclick="Save">@(Data.Id == 0 ? "Сохранить" : "Изменить")</button>
            </div>
        </div>
    </div>
}
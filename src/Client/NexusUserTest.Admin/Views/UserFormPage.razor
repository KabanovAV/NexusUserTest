@if (Data != null && GroupSelects != null)
{
    <div class="card h-100">
        <div class="card-header">
            @(Data.Id == 0 ? "Добавить" : "Изменить") пользователя
        </div>
        <div class="card-body">
            <form class="row">
                <div class="mb-1">
                    <label class="form-label">ФИО</label>
                    <input type="text" class="form-control" @bind-value="Data.FullName">
                </div>
                <div class="mb-1">
                    <label class="form-label">Логин</label>
                    <input type="text" class="form-control" @bind-value="Data.Login">
                </div>
                <div class="mb-1">
                    <label class="form-label">Пароль</label>
                    <input type="text" class="form-control" @bind-value="Data.Password">
                </div>
                <div class="mb-1">
                    <label class="form-label">Организация</label>
                    <input type="text" class="form-control" @bind-value="Data.Organization">
                </div>
                <div class="mb-1">
                    <label class="form-label">Позиция</label>
                    <input type="text" class="form-control" @bind-value="Data.Position">
                </div>
                <div class="mt-2">
                    <div class="card">
                        <div class="card-header">
                            Группы
                        </div>
                        <div class="card-body">
                            @foreach (var select in GroupSelects)
                            {
                                <div class="form-check form-check-inline" @onclick="() => CheckboxChange(select.Value)">
                                    <input class="form-check-input" type="checkbox" checked="@(Data.GroupUserItems!.Any(x => x.GroupId == select.Value) ? true : false)">
                                    <label class="form-check-label">
                                        @select.Text
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end gap-1">
                <button class="btn btn-light border" @onclick="Cancel">Отмена</button>
                <button class="btn btn-light border" @onclick="Save">@(Data.Id == 0 ? "Сохранить" : "Изменить")</button>
            </div>
        </div>
    </div>
}
@page "/admin/specialization"
@layout AdminLayout
@rendermode InteractiveServer

@if (Items == null)
{
    <div class="" style=@($"height: 100%; width:100%; display: flex; align-items: center; justify-content: center;")>
        <div style="">
            <Wave Color="blue" Center="true" Size="2rem" style="opacity:1" />
            <h5 class="mt-3" style="color:blue">
                Загрузка данных
            </h5>
        </div>
    </div>
}
else
{
    <NexusTableGrid @ref="NexusTable" TItem="SpecializationDTO" Data="Items" SelectionMode="SelectMode"
                    EditMode="EditMode" ShowEmptyMessage="true" EmptyMessage="Нет специализаций">
        <ToolTemplate>
            <div class="mb-1">
                <NexusGroupButton>
                    <NexusButton Title="Добавить" OnClick="Insert" CssClass="btn-primary" IconClass="bi bi-plus-lg" Disable="IsCrud" />
                    <NexusButton Title="Изменить" OnClick="Edit" CssClass="btn-warning" IconClass="bi bi-pencil-fill" Disable="IsSelected" />
                    <NexusButton Title="Удалить" OnClick="Delete" CssClass="btn-danger" IconClass="bi bi-trash3-fill" Disable="IsSelected" />
                </NexusGroupButton>
                <NexusGroupButton Visible="IsSaveCancel">
                    <NexusButton Title="Сохранить" OnClick="Save" CssClass="btn-success" IconClass="bi bi-floppy-fill" />
                    <NexusButton Title="Отменить" OnClick="Cancel" CssClass="btn-danger" IconClass="bi bi-x-lg" />
                </NexusGroupButton>
            </div>
        </ToolTemplate>
        <Columns>
            <NexusTableGridColumn Title="Id" Property="Id" />
            <NexusTableGridColumn Title="Название" Property="Title" />
        </Columns>
        <EditColumns>
            <NexusTableGridColumn Title="Id" Property="Id" />
            <NexusTableGridColumn Title="Название">
                <input type="text" class="form-control border border-black" @bind="context.Title" />
            </NexusTableGridColumn>
        </EditColumns>
    </NexusTableGrid>
}

